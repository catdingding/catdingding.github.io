body {
    height: auto;
}

main::before {
    content: "";
    opacity: 0.25;
    background-image: url(/images/bg.webp);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position:50% 50%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -999;
}